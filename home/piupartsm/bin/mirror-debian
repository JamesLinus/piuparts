#!/bin/sh

debmirror  \
        --ignore-small-errors \
        --ignore-release-gpg \
        --host=ftp.fi.debian.org \
        --method=http \
        --passive \
        --dist=sid,lenny,etch \
        --section=main,contrib,non-free \
        --arch=i386 \
        --postcleanup \
        --getcontents \
        /org/mirror || echo debmirror run has failed

