	semanticscuttle)			MYSQL=yes ;;
	serendipity)				MYSQL=yes ;;
	simba)					MYSQL=yes ;;
	spotweb)				MYSQL=yes ;;
	sshproxy-backend-mysql)			MYSQL=yes ;;
	steam)					MYSQL=yes ;;
	sympa)					MYSQL=yes ;;
	tango-accesscontrol)			MYSQL=yes ;;
	tango-accesscontrol-dbg)		MYSQL=yes ;;
	tango-db)				MYSQL=yes ;;
	tango-db-dbg)				MYSQL=yes ;;
