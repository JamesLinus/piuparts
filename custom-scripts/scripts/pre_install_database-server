	tt-rss)					POSTGRESQL=yes ;;
	typo3-dummy)				MYSQL=yes ;;
	ukolovnik)				MYSQL=yes ;;
	webcalendar)				MYSQL=yes ;;
	webissues-server)			MYSQL=yes ;;
	websimba)				MYSQL=yes ;;
	wims-moodle)				POSTGRESQL=yes ;;
